<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>Listado de Carros</title>
</head>
<body>
  <h1>Listado de Carros</h1>
  <a href="/create">Crear nuevo carro</a>

  <form action="/show" method="get" style="display:inline-block;margin-left:20px;">
    <input type="text" name="id" placeholder="Buscar por id">
    <button type="submit">Buscar</button>
  </form>

  <ul>
    <% if (carros.length === 0) { %>
      <li>No hay carros aún</li>
    <% } else { %>
      <% carros.forEach(function(c){ %>
        <li>
          <strong>ID:</strong> <%= c.id %> — 
          <strong>Marca:</strong> <%= c.marca %> — 
          <a href="/show/<%= c.id %>">Ver</a>
        </li>
      <% }); %>
    <% } %>
  </ul>
</body>
</html>
